<Page x:Class="RentCar.OrderIsReady"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RentCar"
      mc:Ignorable="d" 
      d:DesignHeight="490" d:DesignWidth="868"
      Title="Договор готов" Background="#EDF2F4">

    <Grid>
        <StackPanel Width="760" VerticalAlignment="Center">
            <TextBlock Text="Договор заключен успешно!" FontSize="32" Foreground="#D90429"/>
            <TextBlock Text="Если желаете скачать договор, нажмите на кнопку 'Скачать'" FontSize="32" TextWrapping="Wrap" Margin="0 30 0 0"/>
            <TextBlock Text="↓" FontSize="48"/>
            <Button Height="60" Width="300" x:Name="ButtonSave" Click="ButtonSave_Click">
                <TextBlock Text="Скачать" FontSize="32" Foreground="#EDF2F4"/>
            </Button>
        </StackPanel>
    </Grid>
</Page>
